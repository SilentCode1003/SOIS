        function populatetable(data) {
            console.log(data);
            const tableBody = $('#data-table tbody');
            tableBody.empty();
    
            if (data.length === 0) {
                const tr = $('<tr>').append($('<td>', {
                    colspan: 9,
                    class: 'text-center',
                    text: 'No Data Matched'
                }));
                tableBody.append(tr);
            } else {
                data.forEach(item => {
                    console.log("Access: "+item.accesstype)
                    console.log("Position: "+item.position)

                    let accessname = '';
                    let positionname = '';
                    $.ajax({
                        type: 'POST',
                        url: '/masteraccess/getname',
                        data: {
                            id: item.accesstype
                        },
                        success: function (result) {
                            let data = result.data;
                            accessname = data[0].name;

                            $.ajax({
                                type: 'POST',
                                url: '/masterposition/getname',
                                data: {
                                    id: item.position
                                },
                                success: function (result) {
                                    let data = result.data;
                                    positionname = data[0].name;
                                    let action = '';
                                    if (item.status === 'ACTIVE') {
                                        action = `<button id="editBtn" class="btn btn-outline-primary shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#accessModal">EDIT</button>
                                        <button id="inactiveBtn" class="btn btn-outline-danger shadow-sm w-100 mt-1" name="inactiveBtn">INACTIVE</button>`;
                                    } else if (item.status === 'INACTIVE') {
                                        action = `<button id="editBtn" class="btn btn-outline-primary shadow-sm w-100" name="editBtn" data-toggle="modal" data-target="#accessModal">EDIT</button>
                                        <button id="activeBtn" class="btn btn-outline-success shadow-sm w-100 mt-1" name="activeBtn">ACTIVE</button>`;
                                    }

                                    const tr = $('<tr>').append(
                                        $('<td>', { text: item.id, 'data-label': 'Employee ID', class: 'custom-mobile-align' }),
                                        $('<td>', { text: item.firstname, 'data-label': 'First Name', class: 'custom-mobile-align no-wrap' }),
                                        $('<td>', { text: item.middlename, 'data-label': 'Middle Name', class: 'custom-mobile-align' }),
                                        $('<td>', { text: item.lastname, 'data-label': 'Last Name', class: 'custom-mobile-align' }),
                                        $('<td>', { text: positionname, 'data-label': 'Position', class: 'custom-mobile-align' }),
                                        $('<td>', { text: accessname, 'data-label': 'Access Type', class: 'custom-mobile-align' }),
                                        $('<td>', { text: item.contactno, 'data-label': 'Contact Number', class: 'custom-mobile-align' }),
                                        $('<td>', { text: item.datehire, 'data-label': 'Date Hire', class: 'custom-mobile-align no-wrap' }),
                                        $('<td>', { text: item.status, 'data-label': 'Status', class: 'custom-mobile-align' }),
                                        $('<td>', { text: item.createdby, 'data-label': 'Created By', class: 'custom-mobile-align no-wrap' }),
                                        $('<td>', { text: item.createddate, 'data-label': 'Created Date', class: 'custom-mobile-align no-wrap' }),
                                        $('<td>', { html: action, 'data-label': 'Action', class: '' })
                                    );

                                    tableBody.append(tr);
                                }
                            });
                    
                        }
                    });
                });
            }
        }
    
        function LoadTable() {
            $.ajax({
                url: '/masteremployee/load',
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.msg === 'success') {
                        populatetable(data.data);
                    } else {
                        console.error(data.msg);
                    }
                },
                error: function (error) {
                    console.error(error);
                }
            });
        }
    
        function LoadList() {
            $.ajax({
                type: 'GET',
                url: '/masterposition/load',
                success: function (result) {
                    var data = result.data;
    
                    $.each(data, function (key, item) {
                        if (item.status == "ACTIVE") {
                            var options = new Option(item.name, item.id);
                            $('#position').append(options);
                        }
                    });
                },
                error: function (err) {
                    errormsg(err);
                }
            });

            $.ajax({
                type: 'GET',
                url: '/masteraccess/load',
                success: function (result) {
                    var data = result.data;
    
                    $.each(data, function (key, item) {
                        if (item.status == "ACTIVE") {
                            var options = new Option(item.name, item.id);
                            $('#accesstype').append(options);
                        }
                    });
                },
                error: function (err) {
                    errormsg(err);
                }
            });
        }
    
        $(document).on('click', '#activeBtn', function(){
            console.log(employeeid);
            console.log(status);
            $.ajax({
                type: 'POST',
                url: '/employees/status',
                data: {
                    status: status,
                    employeeid: employeeid,
                },
                success: function (result) {
                    if (result.msg == 'success') {
                        LoadTable();
                        success('Saved', 'Successfully')
                    }
    
                    if (result.msg == 'notexist') {
                        warning(`${employeeid} does not exist!`);
                    }
    
                },
                error: function (err) {
