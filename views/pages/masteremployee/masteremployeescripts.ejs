        $(document).on('click', '#addBtn', function () {
            let firstname = $('#firstname').val();
            let middlename = $('#middlename').val();
            let lastname = $('#lastname').val();
            let position = $('#position').val();
            let accesstype = $('#accesstype').val();
            let contactno = $('#contactno').val();
            let datehire = $('#datehire').val();

            var message = "";
            if (firstname == '') { message += 'First Name, ' }
            if (middlename == '') { message += 'Middle Name, ' }
            if (lastname == '') { message += 'Last Name, ' }
            if (position == '') { message += 'Position, ' }
            if (accesstype == '') { message += 'Access Type, ' }
            if (contactno == '') { message += 'Contact No., ' }
            if (datehire == '') { message += 'Date Hire, ' }
    
            if (message != '') {
                warning('Required', `Please fill up ${message}`);
            }
            else {
                console.log(firstname, middlename, lastname, position, accesstype, contactno, datehire)
                $.ajax({
                    type: 'POST',
                    url: '/masteremployee/save',
                    data: {
                        firstname: firstname,
                        middlename: middlename,
                        lastname: lastname,
                        position: position,
                        accesstype: accesstype,
                        contactno: contactno,
                        datehire: datehire
                    },
