<!-- Main Content Area -->
<div class="page-holder">

  <!-- ENTRIES CALLER -->
  <div class="col-12 ml-auto mt-3 d-flex justify-content-end button-holder">
    <!-- SHOW ENTRIES -->
    <button class="btn btn-dark mr-1" id="showButton2">Entries</button>
    <!-- HIDE ENTRIES -->
    <button class="btn btn-danger" id="hideButton2">Close</button>
  </div>

  <!-- ENTRIES -->
  <div class="mt-3" id="targetDiv2" style="display: none;">
    <!-- PAGE TITLE -->
    <div class="col-sm-12 top-title-bar">
      <label id="tittle-bar">Users Entries</label>
    </div>

    <!-- ENTRIES CONTAINER -->
    <div class="col-md-12 entry-container">
      <div>
        <!-- <form class="needs-validation combined-form" novalidate> -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="employeeid">Employee ID</label>
            <select class="form-control text-center" name="employeeid" id="employeeid">
              <option value="">-- Select Employee --</option>
            </select> 
          </div>

          <div class="col-md-4 mb-3">
            <label for="fullname">Full Name</label>
            <input id="fullname" name="fullname" type="text" class="form-control" placeholder="Full Name"
              required />
          </div>

          <div class="col-md-4 mb-3">
            <label for="username">User Name</label>
            <input id="username" name="username" type="text" class="form-control" placeholder="User Name" required />
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-4 mb-3">
            <label for="password">Password</label>
            <input id="password" name="password" type="text" class="form-control" placeholder="Password" required />
          </div>

          <div class="col-md-4 mb-3">
            <label for="accessid">Access Type</label>
            <select class="form-control text-center" name="accessid" id="accessid">
              <option value="">-- Select Access Type --</option>
            </select> 
          </div>
        </div>

        <div class="row justify-content-end mr-4">
          <button id="addBtn" class="btn btn-success" type="submit">+ Add</button>
        </div>
        <!-- </form> -->
      </div>
    </div>
    <!-- CONTAINER END -->
  </div>
  <!-- END ENTRIES -->

  <!-- TABLE TITLE -->
  <div class="col-sm-12 mid-title-bar">
    <label id="tittle-bar">Users Table</label>
  </div>

  <!-- TABLE -->
  <div class="table-responsive scrollable-table-container-lg">
    <table id="data-table" class="table custom-mobile-table">
      <thead class="table-header">
        <th class="no-wrap">ID</th>
        <th class="no-wrap">Employee ID</th>
        <th class="no-wrap">Full Name</th>
        <th class="no-wrap">User Name</th>
        <th class="no-wrap">Password</th>
        <th class="no-wrap">Access ID</th>
        <th class="no-wrap">Status</th>
        <th class="no-wrap">Created By</th>
        <th class="no-wrap">Created Date</th>
        <th class="no-wrap">Action</th>
      </thead>
      <tbody></tbody>
    </table>
  </div>


</div>