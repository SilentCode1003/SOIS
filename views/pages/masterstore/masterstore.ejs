<!-- Main Content Area -->
<div class="page-holder">

  <!-- ENTRIES CALLER -->
  <div class="col-12 ml-auto mt-3 d-flex justify-content-end button-holder">
    <!-- SHOW ENTRIES -->
    <button class="btn btn-dark mr-1" id="showButton2">Entries</button>
    <!-- HIDE ENTRIES -->
    <button class="btn btn-danger" id="hideButton2">Close</button>
  </div>

  <!-- ENTRIES -->
  <div class="mt-3" id="targetDiv2" style="display: none;">
    <!-- PAGE TITLE -->
    <div class="col-sm-12 top-title-bar">
      <label id="tittle-bar">Store Entries</label>
    </div>

    <!-- ENTRIES CONTAINER -->
    <div class="col-md-12 entry-container">
      <div>
        <!-- <form class="needs-validation combined-form" novalidate> -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="name">Store Name</label>
            <input id="name" name="name" type="text" class="form-control" placeholder="Store Name"
              required />
          </div>

          <div class="col-md-4 mb-3">
            <label for="address">Address</label>
            <input id="address" name="address" type="text" class="form-control" placeholder="Address"
              required />
          </div>

          <div class="col-md-4 mb-3">
            <label for="contact">Contact Number</label>
            <input id="contact" name="contact" type="text" class="form-control" placeholder="contact" required />
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-4 mb-3">
            <label for="messages">Message</label>
            <input id="messages" name="messages" type="text" class="form-control" placeholder="Message" required />
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-4 ">
            <div class="input-group mb-3">
              <div class="custom-file">
                <input
                  class="btn btn-outline-inventory w-100"
                  type="file"
                  id="imageInput"
                  placeholder="Select Image"
                />
              </div>
            </div>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-md-4">
            <div class="align-center">
              <img
                id="productimage"
                src="/images/logo/urbanhideout.png"
                class="img-thumbnail"
                alt="..."
              />
            </div>
          </div>
        </div>

        <div class="row justify-content-end mr-4">
          <button id="addBtn" class="btn btn-success" type="submit">+ Add</button>
        </div>
        <!-- </form> -->
      </div>
    </div>
    <!-- CONTAINER END -->
  </div>
  <!-- END ENTRIES -->

  <!-- TABLE TITLE -->
  <div class="col-sm-12 mid-title-bar">
    <label id="tittle-bar">Store Table</label>
  </div>

  <!-- TABLE -->
  <div class="table-responsive scrollable-table-container-lg">
    <table id="data-table" class="table custom-mobile-table">
      <thead class="table-header">
        <th class="no-wrap">ID</th>
        <th class="no-wrap">Store Name</th>
        <th class="no-wrap">Logo</th>
        <th class="no-wrap">Address</th>
        <th class="no-wrap">Contact</th>
        <th class="no-wrap">Message</th>
      </thead>
      <tbody></tbody>
    </table>
  </div>


</div>