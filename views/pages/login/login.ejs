<div class="custom-login-container">
    <div class="bg"></div>
    <div class="row d-flex justify-content-center align-items-center login-height">
        <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="/images/Background.jpg"
            class="img-fluid" alt="Sample image">
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form>

            <div class="d-flex justify-content-center mb-4">
                <img src="/images/nolabel.jpg" class="img-fluid h-50 w-50 display-custom" alt="Sample image">
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4 custom-mobile-responsive">
                <label class="form-label " for="form3Example3">Username</label>
                <input type="username" id="username" name="username" class="form-control form-control-lg"
                placeholder="Enter Username" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3 custom-mobile-responsive">
                <label class="form-label " for="form3Example4">Password</label>
                <input type="password" id="password" name="password" class="form-control form-control-lg"
                placeholder="Enter password" />
            </div>

            <div class="d-flex justify-content-between align-items-center custom-mobile-responsive">
                <!-- Checkbox -->
                <div class="form-check mb-0">
                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                <label class="form-check-label " for="form2Example3">
                    Remember me
                </label>
                </div>
                <a href="#!" class="">Forgot password?</a>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
                <button type="button" id="loginBtn" class="btn btn-outline-success shadow-sm  btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            </div>

            </form>
        </div>
    </div>
</div>
    