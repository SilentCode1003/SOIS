        function populatetable(data) {
            console.log(data);
            const tableBody = $('#data-table tbody');
            tableBody.empty();
    
            if (data.length === 0) {
                const tr = $('<tr>').append($('<td>', {
                    colspan: 9,
                    class: 'text-center',
                    text: 'No Data Matched'
                }));
                tableBody.append(tr);
            } else {
                data.forEach(item => {
                    const tr = $('<tr>').append(
                        $('<td>', { text: item.id, 'data-label': 'Employee ID', class: 'custom-mobile-align sois-link', 'data-toggle': 'modal', 'data-target': '#sales-details-modal' }),
                        $('<td>', { text: item.date, 'data-label': 'First Name', class: 'custom-mobile-align no-wrap' }),
                        $('<td>', { text: item.cashier, 'data-label': 'Middle Name', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.paymenttype, 'data-label': 'Last Name', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.details, 'data-label': 'Position', class: 'custom-mobile-align' }),
                        $('<td>', { text: item.total, 'data-label': 'Access Type', class: 'custom-mobile-align' }),
                    );

                    tableBody.append(tr);
                });
            }
        }
    
        function LoadTable() {
            $.ajax({
                url: '/salesdetails/load',
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.msg === 'success') {
                        populatetable(data.data);
                    } else {
                        console.error(data.msg);
                    }
                },
                error: function (error) {
                    console.error(error);
                }
            });
        }
    
        function LoadList() {
            $.ajax({
                type: 'GET',
                url: '/masteremployee/load',
                success: function (result) {
                    var data = result.data;

                    $.each(data, function (key, item) {
                        if (item.status == "ACTIVE") {
                            var fullName = item.firstname + ' ' + item.middlename + ' ' + item.lastname;
                            var options = new Option( item.id); 
                            $(options).data('fullname', fullName); 
                            $('#employeeid').append(options);
                        }
                    });
                },
                error: function (err) {
                    errormsg(err);
                }
            });

            $.ajax({
                type: 'GET',
                url: '/masteraccess/load',
                success: function (result) {
                    var data = result.data;

                    $.each(data, function (key, item) {
                        if (item.status == "ACTIVE") {
                            var options = new Option(item.name, item.id); 
                            $('#accessid').append(options);
                        }
                    });
                },
                error: function (err) {
                    errormsg(err);
                }
            });
        }

        $(document).on('click', '.sois-link', function(){
            console.log("clicked");
            $.ajax({
                type: 'POST',
                url: '/salesdetails/getdetails',
                data: {
                    id: id,
                },
                success: function (result) {
                    var data = result.data;

                    $('#category-dataTable tbody').empty();

                    $.each(data, function (key, item) {
                        var detailsId = item.ornumber;
                        var date = item.ordate;
                        var items = JSON.parse(item.ordescription);

                        $.each(items, function (index, itemData) {
                            var itemName = itemData.name;
                            var price = itemData.price;
                            var quantity = itemData.quantity;
                            var total = price * quantity;

                            var newRow = $("<tr>");

                            newRow.append($("<td>").attr('data-label', 'Details ID').addClass('custom-mobile-align').text(detailsId));
                            newRow.append($("<td>").attr('data-label', 'Date').addClass('custom-mobile-align').text(date));
                            newRow.append($("<td>").attr('data-label', 'Item Name').addClass('custom-mobile-align').text(itemName));
                            newRow.append($("<td>").attr('data-label', 'Price').addClass('custom-mobile-align').text(formatCurrency(price)));
                            newRow.append($("<td>").attr('data-label', 'Quantity').addClass('custom-mobile-align').text(quantity));
                            newRow.append($("<td>").attr('data-label', 'Total').addClass('custom-mobile-align').text(formatCurrency(total)));

                            $('#category-dataTable tbody').append(newRow);
                        });
                    });
                },
                error: function (err) {
                    errormsg(err);
                }
            });
        });

    
